# EVA Platform Production Environment Configuration
# Copy this file to .env.production and update with your values

# Core Application Settings
NODE_ENV=production
REACT_APP_ENV=production

# Cloudflare Workers API Endpoints (Production)
REACT_APP_API_URL=https://api.eva-platform.com
REACT_APP_FILES_URL=https://files.eva-platform.com
REACT_APP_SMART_MATCHING_URL=https://matching.eva-platform.com
REACT_APP_CHAT_URL=https://chat.eva-platform.com

# API Configuration
REACT_APP_API_VERSION=v1
REACT_APP_REQUEST_TIMEOUT=30000
REACT_APP_MAX_RETRIES=3

# Authentication (Auth0 - Production)
REACT_APP_AUTH0_DOMAIN=eva-platform.auth0.com
REACT_APP_AUTH0_CLIENT_ID=your-production-client-id
REACT_APP_AUTH0_AUDIENCE=https://api.eva-platform.com

# Feature Flags (Production)
REACT_APP_ENABLE_DEBUG=false
REACT_APP_ENABLE_SMART_MATCHING=true
REACT_APP_ENABLE_FILELOCK_CHAT=true
REACT_APP_ENABLE_REAL_TIME_ANALYSIS=true
REACT_APP_ENABLE_ADVANCED_ANALYTICS=true

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=52428800
REACT_APP_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.xls,.xlsx,.png,.jpg,.jpeg
REACT_APP_MAX_FILES_PER_UPLOAD=10

# Customer Management
REACT_APP_CUSTOMER_FAVORITES_LIMIT=50
REACT_APP_CUSTOMER_SEARCH_DEBOUNCE=300
REACT_APP_SESSION_TIMEOUT=28800000

# AI Configuration
REACT_APP_AI_CONFIDENCE_THRESHOLD=0.8
REACT_APP_SMART_MATCHING_TIMEOUT=120000
REACT_APP_ANALYSIS_BATCH_SIZE=10

# Security Settings
REACT_APP_ENABLE_AUDIT_LOGGING=true
REACT_APP_ENABLE_FILE_ENCRYPTION=true
REACT_APP_CSP_ENABLED=true

# Performance Settings
REACT_APP_ENABLE_LAZY_LOADING=true
REACT_APP_CACHE_DURATION=600000
REACT_APP_PREFETCH_CUSTOMER_DATA=true

# Monitoring & Analytics
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ANALYTICS_ENDPOINT=https://api.eva-platform.com/api/v1/analytics
REACT_APP_ERROR_REPORTING=true

# Development Tools (Disabled in Production)
REACT_APP_SHOW_REDUX_DEVTOOLS=false
REACT_APP_ENABLE_HOT_RELOAD=false
REACT_APP_VERBOSE_LOGGING=false

# Compliance Settings
REACT_APP_GDPR_ENABLED=true
REACT_APP_DATA_RETENTION_DAYS=2555
REACT_APP_PRIVACY_POLICY_URL=https://eva-platform.com/privacy
REACT_APP_TERMS_OF_SERVICE_URL=https://eva-platform.com/terms

# Localization
REACT_APP_DEFAULT_LOCALE=en-US
REACT_APP_TIMEZONE=America/New_York
REACT_APP_DATE_FORMAT=MM/DD/YYYY
REACT_APP_CURRENCY=USD

# Production Security
REACT_APP_STRICT_TRANSPORT_SECURITY=true
REACT_APP_CONTENT_SECURITY_POLICY=true
REACT_APP_X_FRAME_OPTIONS=DENY
REACT_APP_X_CONTENT_TYPE_OPTIONS=nosniff 