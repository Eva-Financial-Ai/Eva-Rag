# EVA Platform Development Environment Configuration
# Copy this file to .env.development and update with your values

# Core Application Settings
NODE_ENV=development
REACT_APP_ENV=development

# Cloudflare Workers API Endpoints (Development)
REACT_APP_API_URL=https://eva-api-gateway.eva-platform.workers.dev
REACT_APP_FILES_URL=https://eva-file-access.eva-platform.workers.dev
REACT_APP_SMART_MATCHING_URL=https://eva-smart-match-lender.eva-platform.workers.dev
REACT_APP_CHAT_URL=https://eva-chat-ai-agent.eva-platform.workers.dev
REACT_APP_VIDEO_URL=https://eva-stream-video.eva-platform.workers.dev
REACT_APP_IMAGES_URL=https://eva-images-optimization.eva-platform.workers.dev
REACT_APP_SECURITY_URL=https://eva-turnstile-bot-protection.eva-platform.workers.dev

# Twilio Configuration (Video & Voice)
REACT_APP_TWILIO_ACCOUNT_SID=[YOUR_TWILIO_ACCOUNT_SID]
REACT_APP_TWILIO_AUTH_TOKEN=[YOUR_TWILIO_AUTH_TOKEN]

# API Configuration
REACT_APP_API_VERSION=v1
REACT_APP_REQUEST_TIMEOUT=30000
REACT_APP_MAX_RETRIES=3

# Authentication (Auth0 - Development)
REACT_APP_AUTH0_DOMAIN=your-dev-tenant.auth0.com
REACT_APP_AUTH0_CLIENT_ID=your-dev-client-id
REACT_APP_AUTH0_AUDIENCE=https://your-dev-api-audience

# Feature Flags (Development)
REACT_APP_ENABLE_DEBUG=true
REACT_APP_ENABLE_SMART_MATCHING=true
REACT_APP_ENABLE_FILELOCK_CHAT=true
REACT_APP_ENABLE_REAL_TIME_ANALYSIS=true
REACT_APP_ENABLE_ADVANCED_ANALYTICS=true
REACT_APP_ENABLE_AI_UNDERWRITING=true
REACT_APP_ENABLE_VIDEO_CONFERENCING=true
REACT_APP_ENABLE_VOICE_CALLS=true
REACT_APP_ENABLE_IMAGE_PROCESSING=true
REACT_APP_ENABLE_BOT_PROTECTION=true
REACT_APP_ENABLE_API_MONITORING=true

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=52428800
REACT_APP_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.xls,.xlsx,.png,.jpg,.jpeg
REACT_APP_MAX_FILES_PER_UPLOAD=10

# Customer Management
REACT_APP_CUSTOMER_FAVORITES_LIMIT=20
REACT_APP_CUSTOMER_SEARCH_DEBOUNCE=300
REACT_APP_SESSION_TIMEOUT=28800000

# AI Configuration
REACT_APP_AI_CONFIDENCE_THRESHOLD=0.7
REACT_APP_SMART_MATCHING_TIMEOUT=60000
REACT_APP_ANALYSIS_BATCH_SIZE=5

# Security Settings
REACT_APP_ENABLE_AUDIT_LOGGING=true
REACT_APP_ENABLE_FILE_ENCRYPTION=true
REACT_APP_CSP_ENABLED=true

# Performance Settings
REACT_APP_ENABLE_LAZY_LOADING=true
REACT_APP_CACHE_DURATION=300000
REACT_APP_PREFETCH_CUSTOMER_DATA=true

# Monitoring & Analytics
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ANALYTICS_ENDPOINT=https://eva-api-gateway-dev.eva-platform.workers.dev/api/v1/analytics
REACT_APP_ERROR_REPORTING=true

# Development Tools
REACT_APP_SHOW_REDUX_DEVTOOLS=true
REACT_APP_ENABLE_HOT_RELOAD=true
REACT_APP_VERBOSE_LOGGING=true

# Compliance Settings
REACT_APP_GDPR_ENABLED=true
REACT_APP_DATA_RETENTION_DAYS=2555
REACT_APP_PRIVACY_POLICY_URL=https://eva-platform.com/privacy
REACT_APP_TERMS_OF_SERVICE_URL=https://eva-platform.com/terms

# Localization
REACT_APP_DEFAULT_LOCALE=en-US
REACT_APP_TIMEZONE=America/New_York
REACT_APP_DATE_FORMAT=MM/DD/YYYY
REACT_APP_CURRENCY=USD 